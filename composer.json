{
    "name": "uluumbch/weight-conversions",
    "description": "A simple PHP package for convert a weight",
    "keywords": [
        "uluumbch",
        "weight-conversions"
    ],
    "homepage": "https://github.com/uluumbch/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Bachrul Uluum",
            "email": "uluum123@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Uluumbch\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Uluumbch\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
